{
	"name": "escedit",
	"description": "Save editor for The Escapists",
	"version": "0.0.1",
	"author": "ww",
	"license": "MIT",
	"main": "src/index.js",
	"scripts": {
		"init": "chmod +x ./init.sh && ./init.sh",
		"start": "clear && electron .",
		"build": "chmod +x ./build.sh && ./build.sh"
	},
	"devDependencies": {
		"electron": "1.7.9",
		"mcrypt": "*",
		"electron-builder": "*"
	},
	"build": {
		"productName": "escedit",
		"directories": {
			"buildResources": "src/",
			"output": "build/",
			"app": "."
		},
		"files": [
			"src/*",
			"src/**/*"
		]
	}
}
